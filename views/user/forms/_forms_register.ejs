<div class="row">

    <!-- NAME -->
    <div class="col-12">
        <label class="form-label">Nom</label>
        <input type="text" name="registerName" class="form-control" required>
        <br>
    </div>

    <!-- MAIL -->
    <div class="col-12">
        <label class="form-label">Mail</label>
        <input type="email" name="registerMail" class="form-control" required>
        <br>
    </div>

    <!-- MOT DE PASSE -->
    <div class="col-6">
        <label class="form-label">Mot de passe</label>
        <input type="password" name="registerPassword" class="form-control" required>
        <br>
    </div>

    <!-- CONFIRMATION -->
    <div class="col-6">
        <label class="form-label">Confirmation</label>
        <input type="password" name="registerPasswordConfirm" class="form-control" required>
        <br>
    </div>
</div>